#-*- Makefile -*-
#
# ${R_HOME}/src/library/tcltk/Makefile.win

srcdir = .
top_srcdir = ../../..

top_builddir = ../../..

pkg = tcltk

R_EXE = $(top_builddir)/$(BINDIR)/Rterm.exe --vanilla --slave

RSRC = `LC_COLLATE=C ls $(srcdir)/R/*.R $(srcdir)/R/$(R_OSTYPE)/zzz.R`

ECHO = echo
MKINSTALLDIRS = mkdir -p
INSTALL_DATA = cp
SHELL = sh
USE_NLS = yes

BUILD_TCLTK = yes

ifneq ($(strip $(BUILD_TCLTK)),yes)
all:
	@$(ECHO) "building stub package '$(pkg)'"
	@$(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)/R
	@$(MAKE) -f Makefile.win mkdesc
	@cp $(srcdir)/R/unix/zzzstub.R $(top_builddir)/library/$(pkg)/R/$(pkg)
else
all:
	@$(ECHO) "building package '$(pkg)'"
	@$(MKINSTALLDIRS) $(top_builddir)/library/$(pkg)
	@$(MAKE) -f Makefile.win mkR mkdesc mkexec mkdemos mkpo
	@$(MAKE) -f Makefile.win mksrc-win
	@$(MAKE) -f Makefile.win mklazy
endif

include $(top_srcdir)/share/make/basepkg.mk
